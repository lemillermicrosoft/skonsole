<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <PackageId>SKonsole</PackageId>
    <Version>1.0.1</Version>
    <Authors>Lee Miller</Authors>
    <Company>Microsoft</Company>
    <PackageDescription>A console app built on Semantic Skills</PackageDescription>
    <RepositoryUrl>https://github.com/lemillermicrosoft/skonsole</RepositoryUrl>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>skonsole</ToolCommandName>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" Version="7.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="7.0.0" />
    <PackageReference Include="Microsoft.SemanticKernel" Version="0.23.230906.2-nightly" />
    <PackageReference Include="Microsoft.SemanticKernel.Skills.OpenAPI" Version="0.23.230906.2-nightly" />
    <PackageReference Include="Microsoft.SemanticKernel.Skills.Web" Version="0.23.230906.2-nightly" />
    <PackageReference Include="Microsoft.SemanticKernel.Planning.StepwisePlanner" Version="0.23.230906.2-nightly" />
    <PackageReference Include="Microsoft.SemanticKernel.Reliability.Basic" Version="0.23.230906.2-nightly" />
    <PackageReference Include="Spectre.Console" Version="0.47.0" />
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
    <PackageReference Include="TextCopy" Version="6.2.1" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\skills\PRSkill\PRSkill.csproj" />
  </ItemGroup>
  <ItemGroup>
    <None Update="AIPlugins/**/*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>